# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Creates an enquete
GET     /                           controllers.Application.index

POST    /                           controllers.EnqueteController.create
GET     /admin                      controllers.EnqueteController.admin
GET     /admin/:adminKey            controllers.EnqueteController.get(adminKey: String)
POST    /admin/:adminKey            controllers.EnqueteController.update(adminKey: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Answer to the enquete
GET     /:answerKey                 controllers.AnsweringController.show(answerKey: String)
POST    /:answerKey                 controllers.AnsweringController.answer(answerKey: String)
